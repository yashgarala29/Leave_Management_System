@model Leave_Management_System.Models.Class.leaveType

@{ ViewData["Title"] = "CreatLeaveType";
                Layout = "~/Views/Shared/_Layout.cshtml"; }




<div class="col-lg-6">
    <div class="card">
        <div class="card-header">
            <strong>New Leave Type</strong> Form
        </div>
        <div class="card-body card-block">
            <form asp-action="CreatLeaveType">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="LeaveType" class="control-label"></label>
                <input asp-for="LeaveType" class="form-control" />
                <span asp-validation-for="LeaveType" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="noofday" class="control-label">Number of days</label>
                <input asp-for="noofday" class="form-control" />
                <span asp-validation-for="noofday" class="text-danger"></span>
            </div>


            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
            </form>
        </div>
    </div>
</div>
