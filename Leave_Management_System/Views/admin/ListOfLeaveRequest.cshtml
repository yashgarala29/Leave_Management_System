                success: function (response) {
                    location.reload();

                },
                failure: function (response) {
                    location.reload();
                },
                error: function (response) {
                    location.reload();
                }
            });
            //alert(save_change);

        })
        $("[name=Reject]").on("click", function () {
            var savechangevalue = $(this).val();
            var save_change = "Rejected";
