@model IEnumerable<Leave_Management_System.Models.Class.LeaveHistory>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}



<!-- Begin Page Content -->
<div class="container-fluid px-lg-4">
    <div class="row">
        <div class="col-md-12 mt-lg-4 mt-4">
            <!-- Page Heading -->
            <div class="d-sm-flex align-items-center justify-content-between mb-4">
                <h2 class="h3 mb-0 text-black-50 ">
                   Leave Histories
                </h2>

            </div>
        </div>




        <!-- column -->
        <div class="col-md-12 mt-4">
            <div class="card">
                <div class="card-body">
                    <!-- title -->
                    <div class="d-md-flex align-items-center">
                        <div>

                            <h5 class="card-subtitle">List Of All Leaves</h5>
                        </div>
                        <!--
                        <div class="ml-auto">
                            <div class="dl">
                                <select class="custom-select">
                                    <option value="0" selected="">Monthly</option>
                                    <option value="1">Daily</option>
                                    <option value="2">Weekly</option>
                                    <option value="3">Yearly</option>
                                </select>
                            </div>
                        </div>
                            -->
                    </div>
                    <!-- title -->
                </div>
                <div class="table-responsive">


                    <table class="table">
                        <thead>
                            <tr>
                                <th>
                                    @*Html.DisplayNameFor(model => model.AllUser)*@ ID
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.LeaveStatus)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.HODApproveStatus)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.DeanApproveStatus)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.RegistrarApproveStatus)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.NoOfDay)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.LeaveReason)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.StartFrome)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.EndTill)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.Attachment)
                                </th>
                                <th>Operation</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                            <tr>
                                <td>
                                    @Html.DisplayFor(modelItem => item.AllUser.id)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.LeaveStatus)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.HODApproveStatus)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.DeanApproveStatus)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.RegistrarApproveStatus)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.NoOfDay)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.LeaveReason)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.StartFrome)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.EndTill)
                                </td>
                                <td>
                                    @if (item.Attachment == null)
                                    {

                                    }
                                    else
                                    {
                            <a href="~/file/@item.Attachment">User Document</a>}
                                </td>

                                <td>
                                    <a asp-action="Edit" asp-route-id="@item.leave_id">Edit</a> |
                                    <a asp-action="Details" asp-route-id="@item.leave_id">Details</a> |
                                    <a asp-action="Delete" asp-route-id="@item.leave_id">Delete</a>
                                </td>
                            </tr>
                            }
                        </tbody>
                    </table>

                </div>
            </div>
        </div>
    </div>
</div>
