@model Leave_Management_System.Models.ViewModel.DeleteLeave

@{ ViewData["Title"] = "DeleteLeave";
    Layout = "~/Views/Shared/_Layout.cshtml"; }


<div class=".col-6">
    <div class="card">
        <div class="card-header">
            <strong>Delete</strong> Leave Request
        </div>
        <div class="card-body">
            <!-- title -->
            <div class=" align-items-center">
                <h3>Are you sure you want to delete this?</h3>
                <div>
                    <hr />
                    <dl class="row">
                        <dt class="col-sm-2">
                            @Html.DisplayNameFor(model => model.LeaveReason)
                        </dt>
                        <dd class="col-sm-10">
                            @Html.DisplayFor(model => model.LeaveReason)
                        </dd>
                        <dt class="col-sm-2">
                            @Html.DisplayNameFor(model => model.LeaveStatus)
                        </dt>
                        <dd class="col-sm-10">
                            @Html.DisplayFor(model => model.LeaveStatus)
                        </dd>
                        <dt class="col-sm-2">
                            @Html.DisplayNameFor(model => model.LeaveStartFrome)
                        </dt>
                        <dd class="col-sm-10">
                            @Html.DisplayFor(model => model.LeaveStartFrome)
                        </dd>
                        <dt class="col-sm-2">
                            @Html.DisplayNameFor(model => model.LeaveEndTill)
                        </dt>
                        <dd class="col-sm-10">
                            @Html.DisplayFor(model => model.LeaveEndTill)
                        </dd>
                        <dt class="col-sm-2">
                            @Html.DisplayNameFor(model => model.NoOfDay)
                        </dt>
                        <dd class="col-sm-10">
                            @Html.DisplayFor(model => model.NoOfDay)
                        </dd>
                    </dl>

                    <form asp-action="DeleteLeave">
                        <input type="hidden" asp-for="leave_id" />
                        <input type="submit" value="Delete" class="btn btn-danger" />
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
