@model Leave_Management_System.Models.ViewModel.LoginViewModel

@{
    ViewData["Title"] = "LeaveRequest";
    Layout = "~/Views/Shared/H_Layout.cshtml";
}

<!-- Begin Page Content -->
<div class="container-fluid px-lg-4">
    <div class="row justify-content-center">
        <div class="col-md-12 mt-lg-4 mt-4">
            <!-- Page Heading -->
            <div class="d-sm-flex align-items-center justify-content-between mb-4">
                <h2 class="h3 mb-0 text-black-50 ">
                    
                </h2>
            </div>
        </div>




        <!-- column -->
        <div class="col-md-4">
            <div class="card">
                <div class="card-body">
                    <!-- title -->
                    <div class=" align-items-center">
                        <div>
                            <form method="post">

                                <div asp-validation-summary="All" class="text-danger">


                                    <div class="d-sm-flex align-items-center justify-content-between mb-4">
                                        <h2 class="h3 mb-0 text-black-50 ">
                                            Login
                                        </h2>
                                        <br />
                                    </div>
                                    <hr />
                                </div>
                                <div class="form-group">
                                    <!--<label asp-for="Email"></label>-->
                                    <input asp-for="Email" class="form-control" placeholder="Enter Email" />
                                    <span asp-validation-for="Email " class="text-danger"></span>
                                </div>
                                <div class="form-group">
                                    <!--<label asp-for="Password"></label>-->
                                    <input asp-for="Password" class="form-control" placeholder="Enter Password" />
                                    <span asp-validation-for="Password" class="text-danger"></span>
                                </div>


                                <button type="submit" class="btn btn-dark btn-block">Login</button>
                                <a asp-action="forgotpassword">Forgot Password ? </a>
                            </form>
                        </div>

                    </div>
                    <!-- title -->
                </div>

            </div>
        </div>
    </div>
</div>

