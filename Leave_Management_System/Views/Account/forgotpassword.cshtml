@model Leave_Management_System.Models.ViewModel.LoginViewModel

@{ ViewData["Title"] = "Forgot Password";
                Layout = "~/Views/Shared/H_Layout.cshtml"; }


<div class="page-wrapper">
    <div class="page-content--bge5">
        <div class="container">
            <div class="login-wrap">
                <div class="login-content">
                    <div class="login-logo">

                        <img src="~/images/icon/logo9.png" alt="CoolAdmin" width="300" height="300">

                    </div>
                    <hr />
                    <center><h2>Forget Password</h2></center>
                    <hr />
                    <div class="login-form">
                        @if (ViewBag.msg != null)
                        {
                    <div class="alert alert-primary" role="alert">
                        @ViewBag.msg
                    </div>}
                        <form method="post">
                            <div asp-validation-summary="All" class="text-danger">

                            </div>
                            <div class="form-group">
                                <label asp-for="Email"></label>
                                <input asp-for="Email" class="form-control" />
                                <span asp-validation-for="Email" class="text-danger"></span>
                            </div>
                            <button type="submit" class="btn btn-primary">Submit</button>
                        </form>

                        <p>

                            <a asp-action="Login">Back to Login Page</a>
                        </p>
                    </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>


<div  class="row">
    <div class="col-md-12">
        @if (ViewBag.msg != null)
        {
            <div class="alert alert-primary" role="alert">
                @ViewBag.msg
            </div>
        }
        <form method="post">
            <div asp-validation-summary="All" class="text-danger">

            </div>
            <div class="form-group">
                <label asp-for="Email"></label>
                <input asp-for="Email" class="form-control" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
            <button type="submit" class="btn btn-primary">Submit</button>>
        </form>


    </div>  
</div>