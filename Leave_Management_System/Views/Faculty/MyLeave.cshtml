@model IEnumerable<Leave_Management_System.Models.ViewModel.MyLeave>

@{ ViewData["Title"] = "MyLeave";
                Layout = "~/Views/Shared/_Layout.cshtml"; }


<div class="row m-t-30">
    <div class="col-md-12">
        <div class="table-data__tool-left">
            <div class="row">
                <div class="col-md-12">
                    <div class="overview-wrap">
                        <h2 class="title-1">My Leave</h2>
                        
                    </div>
                </div>
            </div>
            
        </div><br />
        </hr>
        <!-- DATA TABLE-->

        <div class="table-responsive m-b-40">
            <table class="table table-borderless table-data3">
                <thead>
                    <tr>
                        <th>
                            @Html.DisplayNameFor(model => model.LeaveStatus)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.LeaveReason)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.NoOfDay)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.StartFrome)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.EndTill)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Attachment)
                        </th>

                        <th colspan="2">Operations</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.LeaveStatus)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.LeaveReason)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.NoOfDay)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.StartFrome)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.EndTill)
                </td>
                <td>
                    @if (item.Attachment == null)
                    {

                    }
                    else
                    {
                        <a href="~/file/@item.Attachment">User Document</a>
                    }
                </td>
                @if (item.changeable == 1)
                {
            <td>

                <a asp-action="UpdateLeave" asp-route-leave_id="@item.leave_id" class="btn btn-warning zmdi zmdi-edit" data-toggle="tooltip" data-placement="top" title="Edit"></a>
                <a asp-action="DeleteLeave" asp-route-leave_id="@item.leave_id" class="btn btn-danger zmdi zmdi-delete" data-toggle="tooltip" data-placement="top" title="Delete"></a>

            </td>
}
            </tr>
}
                </tbody>
            </table>
        </div>


        <!-- END DATA TABLE-->
    </div>
</div>

