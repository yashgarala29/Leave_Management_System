@model Leave_Management_System.Models.ViewModel.DeleteLeave

@{
    ViewData["Title"] = "DeleteLeave";
    Layout = "~/Views/Shared/_Layout.cshtml";
}



<!-- Begin Page Content -->
<div class="container-fluid px-lg-4">
    <div class="row">
        <div class="col-md-12 mt-lg-4 mt-4">
            <!-- Page Heading -->
            <div class="d-sm-flex align-items-center justify-content-between mb-4">
                <h2 class="h3 mb-0 text-black-50 ">
                    Edit Leave
                </h2>
            </div>
        </div>




        <!-- column -->
        <div class=".col-6">
            <div class="card">
                <div class="card-body">
                    <!-- title -->
                    <div class=" align-items-center">
                        <div>
                            <dl class="row">
                                <dt class="col-sm-2">
                                    @Html.DisplayNameFor(model => model.LeaveReason)
                                </dt>
                                <dd class="col-sm-10">
                                   
                                                                @Html.DisplayFor(model => model.LeaveReason)
                                                            </dd>
                                <dt class="col-sm-2">
                                    @Html.DisplayNameFor(model => model.LeaveStatus)
                                </dt>
                                <dd class="col-sm-10">
                                    @Html.DisplayFor(model => model.LeaveStatus)
                                </dd>
                                <dt class="col-sm-2">
                                    @Html.DisplayNameFor(model => model.LeaveStartFrome)
                                </dt>
                                <dd class="col-sm-10">
                                    @Html.DisplayFor(model => model.LeaveStartFrome)
                                </dd>
                                <dt class="col-sm-2">
                                    @Html.DisplayNameFor(model => model.LeaveEndTill)
                                </dt>
                                <dd class="col-sm-10">
                                    @Html.DisplayFor(model => model.LeaveEndTill)
                                </dd>
                                <dt class="col-sm-2">
                                    @Html.DisplayNameFor(model => model.NoOfDay)
                                </dt>
                                <dd class="col-sm-10">
                                    @Html.DisplayFor(model => model.NoOfDay)
                                </dd>
                            </dl>

                            <form asp-action="DeleteLeave">
                                <input type="hidden" asp-for="leave_id" />
                                <h3>Are you sure you want to delete this?</h3>
                                <input type="submit" value="Delete" class="btn btn-danger" />
                            </form>
                        </div>

                    </div>
                    <!-- title -->
                </div>

            </div>
        </div>
    </div>
</div>
