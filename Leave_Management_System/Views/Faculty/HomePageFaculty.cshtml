@{ Layout = "~/Views/Shared/_Layout.cshtml"; }

<!-- Begin Page Content -->
<div class="container-fluid px-lg-4">
    <div class="row">
        <div class="col-md-12 mt-lg-4 mt-4">
            <!-- Page Heading -->
            <div class="d-sm-flex align-items-center justify-content-between mb-4">
                <h2 class="h3 mb-0 text-black-50 ">
                    Welcome, @User.Identity.Name
                </h2>

            </div>
        </div>
    </div>
</div>

<div class="row">
    <div class="col-md-6 col-lg-3">
        <div class="statistic__item">
            <a asp-action="LeaveRequest">
                
                <h2 class="number">Create New Leave</h2>
            </a>
            
           
        </div>
    </div>
    <div class="col-md-6 col-lg-3">
        <div class="statistic__item">
            <a asp-action="MyLeave">
                <h2 class="number">MyLeave</h2>
            </a>
        </div>
    </div>
    <div class="col-md-6 col-lg-3">
        <div class="statistic__item">
           
            <h2 class="number"> @Html.ActionLink("Leave Allocation", "ListUserLeaveAllocation", "Common")</h2>

        </div>
    </div>
    <div class="col-md-6 col-lg-3">
        <div class="statistic__item">
            <h2 class="number"> @Html.ActionLink("My Profile", "ownprofile", "Common")</h2>
        </div>
    </div>
</div>







