@model Leave_Management_System.Models.Class.LeaveAllocation

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Edit</h1>

<h4>LeaveAllocation</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit" >
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="AllocationID" />
            <div class="form-group">
                <label asp-for="NoOfLeave" class="control-label"></label>
                <input asp-for="NoOfLeave" class="form-control" />
                <span asp-validation-for="NoOfLeave" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="leaveType.LeaveType" class="control-label"></label>
                <input asp-for="leaveType.LeaveType" class="form-control" disabled />
                <span asp-validation-for="leaveType.LeaveType" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="AllUser.Email" class="control-label"></label>
                <input asp-for="AllUser.Email" class="form-control" disabled />
                <span asp-validation-for="AllUser.Email" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary btn-block" />
            </div>
        </form>
    </div>
</div>

